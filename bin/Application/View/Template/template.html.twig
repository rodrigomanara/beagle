{# empty Twig template #}
<html>

    <head>
        <base href="{{ base_url }}"/>
        <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link type="text/css" rel="stylesheet" href="bin/Application/View/public/css/style.css"  media="screen,projection"/>
        <link type="text/css" rel="stylesheet" href="bin/Application/View/public/materialize/css/materialize.min.css"  media="screen,projection"/>
        <!--Let browser know website is optimized for mobile-->
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        {% block header %}
        {% endblock header %}
    </head>
    <body>
        <div class="container">
            <div class="row">
                {% block container %}
                    <div class="col s2">
                        {% include 'Template/nav.html.twig'%} 
                    </div>
                    <div class="col s1"></div>
                    <div class="col s8">
                        {% block body %}

                        {% endblock body %}

                    </div>
                {% endblock container %}     
            </div>
        </div>
    </body>
    <footer> 
        <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
        <script src="src/Block/View/public/materialize/js/materialize.min.js"></script>

        {% block footer %}

        {% endblock footer %}  
        <script>
            $(document).ready(function () {
                $('a > .material-icons').rotate({bind: {
                        mouseover: function () {
                            $(this).rotate({animateTo: 360});
                        },
                        mouseout: function () {
                            $(this).rotate({animateTo: 0});
                        }
                    }
                });


                var $sidebar = $("#nav"),
                        $window = $(window),
                        offset = $sidebar.offset(),
                        topPadding = 30;

                $window.scroll(function () {
                    if ($window.scrollTop() > offset.top) {
                        $sidebar.stop().animate({
                            marginTop: $window.scrollTop() - offset.top + topPadding
                        });
                    } else {
                        $sidebar.stop().animate({
                            marginTop: 0
                        });
                    }
                });


            })
        </script>
    </footer>
</html>
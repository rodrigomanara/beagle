{% block body %}
    <div class="row">
        <div class="clearfix">&nbsp;</div>
        <div class="clearfix">&nbsp;</div>
        <div id="img-box" style="position: absolute">
            {% block img_icon %}
                <img src="src/Block/View/public/image/rodrigo.jpg" alt="" class="circle responsive-img"> <!-- notice the "circle" class -->
            {% endblock img_icon%}
        </div>


        <div id="block" class="col s12 white lighten-5 z-depth-1">
            {% block content %}

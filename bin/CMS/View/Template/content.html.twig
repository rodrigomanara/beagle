            {% endblock content %}
        </div>

    </div>

{% endblock body %}

{% block footer %}
    <script src="bin/CMS/View/public/js/jQueryRotate.js"></script>

    <script>
        var block = $('#block');
        var image_box = $('#img-box');

        image_box.hide();

        $(window).resize(function () {
            moveImage();
        }).load(function () {
            moveImage();
        });

        function moveImage() {

            var offset = block.offset();
            var top = offset.top;
            var left = offset.left;

            image_box.css({
                'top': top - (image_box.width() / 2),
                'left': left - (image_box.height() / 2),
                'position': 'absolute'
            });
            image_box.fadeIn('show');
            image_box.rotate({ bind: {
                    mouseover: function () {
                        $(this).rotate({animateTo: 360});
                    },
                    mouseout: function () {
                        $(this).rotate({animateTo: 0});
                    }
                }
            });

        }
    </script>
{% endblock footer %} 